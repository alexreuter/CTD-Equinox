import acm.gui.*;
import acm.program.*;
import java.awt.event.*;
import javax.swing.*;

public class Calculator extends Program
{
	
	private JLabel myDisplay;
	
    private SimpleStack myStack;
    private boolean myEntering = true;
    
    public void init()
    {
    	myStack = new SimpleStack();
    	myStack.push("0");
        myDisplay = new JLabel("", SwingConstants.RIGHT);
        
        setLayout(new TableLayout(5, 3));
        
        add(myDisplay, "gridwidth=4"); 
        add(new JButton("1"));
        add(new JButton("2"));
        add(new JButton("3"));
        add(new JButton("4"));
        add(new JButton("5"));
        add(new JButton("6"));
        add(new JButton("7"));
        add(new JButton("8"));
        add(new JButton("0"));
        add(new JButton("+"));
        add(new JButton("C"));
        add(new JButton("Enter"), "gridwidth=3");
        
        addActionListeners();
        
        myDisplay.setText((String) myStack.top());
        System.out.println(("User is entering: " + myEntering));
        
    }
    
    public void actionPerformed(ActionEvent e) 
    {
        String key;
        
        key = e.getActionCommand(); 
        
        if(key.equals("Enter"))
        {
        	if(myEntering)
        	{
        		myEntering = !myEntering;
        	}
        	else
        	{
        		myStack.push(myStack.top());
        	}
        }
        else if(key.equals("+"))
        {
        	
        }
        else if(key.equals("C"))
        {
        	myStack.pop();
        	myStack.push("0");
        	myEntering = true;
        }
        //This is a digit key
        else
        {
        	if(myEntering)
        	{
        		if(key.equals("0"))
        			myStack.push(key);
        		else
        			myStack.push(myStack.pop() + key);
        	}
        	else
        	{
        		myStack.push(key);
        		myEntering = true;
        	}
        }
    }
}